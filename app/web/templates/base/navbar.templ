			<div class="logo-container">
				<a href={ templ.URL("/" + language + "/home") }>
					<img src="/static/images/navbar/logo.png" alt={ phrases["navbar"]["ntg_logo_alt"] } class="logo"/>
				</a>
				<a href="https://www.ischools.bg/" target="_blank">
					<img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fschool2.transform.bg%2Fwp-content%2Fuploads%2F2022%2F11%2Finovayivno-1024x1024.jpg&f=1&nofb=1&ipt=432b2fc7253ae50cfab5607032f3ed8f4fe104d1387aff136792af7093ce59c5" alt={ phrases["navbar"]["innovative_logo_alt"] } class="innovative-logo"/>
