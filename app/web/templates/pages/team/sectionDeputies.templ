							<h4>{ phrases["deputies"]["deputy4_name"] }</h4>
							<div class="position">{ phrases["deputies"]["deputy4_position"] }</div>
							<p>{ phrases["deputies"]["deputy4_short_bio"] }</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
}
