package team

templ deputiesSection(phrases map[string]map[string]string) {
	<section class="section leadership-section" style="background: var(--light-bg);">
		<div class="container">
			<div class="section-title animate-on-scroll">
				<h2>{ phrases["deputies"]["title"] }</h2>
				<p>{ phrases["deputies"]["subtitle"] }</p>
			</div>
			<div class="row g-4">
				<!-- Deputy 1 -->
				<div class="col-lg-3 col-md-6">
					<div
						class="leader-card team-card-clickable animate-on-scroll"
						onclick={ templ.ComponentScript{Call: "openTeamModal({name: '" + phrases["deputies"]["deputy1_name"] + "', position: '" + phrases["deputies"]["deputy1_position"] + "', photo: '/static/images/team/deputy1.jpg', education: '" + phrases["deputies"]["deputy1_education"] + "', experience: '" + phrases["deputies"]["deputy1_experience"] + "'})"} }
					>
						<div class="leader-image" style="background-image: url('/static/images/team/Аделина Манева.JPG');"></div>
						<div class="leader-content">
							<h4>{ phrases["deputies"]["deputy1_name"] }</h4>
							<div class="position">{ phrases["deputies"]["deputy1_position"] }</div>
							<p>{ phrases["deputies"]["deputy1_short_bio"] }</p>
						</div>
					</div>
				</div>
				<!-- Deputy 2 -->
				<div class="col-lg-3 col-md-6">
					<div
						class="leader-card team-card-clickable animate-on-scroll"
						onclick={ templ.ComponentScript{Call: "openTeamModal({name: '" + phrases["deputies"]["deputy2_name"] + "', position: '" + phrases["deputies"]["deputy2_position"] + "', photo: '/static/images/team/deputy2.jpg', education: '" + phrases["deputies"]["deputy2_education"] + "', experience: '" + phrases["deputies"]["deputy2_experience"] + "'})"} }
