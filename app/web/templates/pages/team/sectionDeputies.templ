						<div class="leader-content">
							<h4>{ phrases["deputies"]["deputy3_name"] }</h4>
							<div class="position">{ phrases["deputies"]["deputy3_position"] }</div>
							<p>{ phrases["deputies"]["deputy3_short_bio"] }</p>
						</div>
					</div>
				</div>
				<!-- Deputy 4 -->
				<div class="col-lg-3 col-md-6">
					<div
						class="leader-card team-card-clickable animate-on-scroll"
						onclick={ templ.ComponentScript{Call: "openTeamModal({name: '" + phrases["deputies"]["deputy4_name"] + "', position: '" + phrases["deputies"]["deputy4_position"] + "', photo: '/static/images/team/deputy4.jpg', education: '" + phrases["deputies"]["deputy4_education"] + "', experience: '" + phrases["deputies"]["deputy4_experience"] + "'})"} }
					>
