							<div class="position">{ phrases["deputies"]["deputy2_position"] }</div>
							<p>{ phrases["deputies"]["deputy2_short_bio"] }</p>
						</div>
					</div>
				</div>
				<!-- Deputy 3 -->
				<div class="col-lg-3 col-md-6">
					<div
						class="leader-card team-card-clickable animate-on-scroll"
						onclick={ templ.ComponentScript{Call: "openTeamModal({name: '" + phrases["deputies"]["deputy3_name"] + "', position: '" + phrases["deputies"]["deputy3_position"] + "', photo: '/static/images/team/deputy3.jpg', education: '" + phrases["deputies"]["deputy3_education"] + "', experience: '" + phrases["deputies"]["deputy3_experience"] + "'})"} }
