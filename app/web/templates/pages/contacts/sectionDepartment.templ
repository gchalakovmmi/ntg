package contacts

templ departments(phrases map[string]map[string]string) {
	<section class="contact-info-section">
		<div class="container py-5">
			<!-- Department Contacts -->
			<div class="row mb-4">
				<div class="col-12">
					<h3 class="department-title text-center mb-4">{ phrases["departments"]["title"] }</h3>
				</div>
			</div>
			<div class="row g-4">
				<!-- Department Contact Items -->
				<div class="col-lg-3 col-md-4 col-sm-6 animate__animated animate__fadeInUp">
					<div class="department-card h-100">
						<div class="department-icon"><i class="fas fa-comments"></i></div>
						<h4>{ phrases["departments"]["secretary_title"] }</h4>
						<a href={ templ.SafeURL("mailto:" + phrases["departments"]["secretary_email"]) } class="department-link">{ phrases["departments"]["secretary_phone"] }</a>
					</div>
				</div>
				<div class="col-lg-3 col-md-4 col-sm-6 animate__animated animate__fadeInUp" style="animation-delay: 0.1s;">
					<div class="department-card h-100">
						<div class="department-icon"><i class="fas fa-calculator"></i></div>
						<h4>{ phrases["departments"]["co_director_title"] }</h4>
