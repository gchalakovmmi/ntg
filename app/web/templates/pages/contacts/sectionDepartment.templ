						<div class="department-icon"><i class="fas fa-first-aid"></i></div>
						<h4>{ phrases["departments"]["accounting_title"] }</h4>
						<a href={ templ.SafeURL("mailto:" + phrases["departments"]["accounting_phone"]) } class="department-link">{ phrases["departments"]["accounting_phone"] }</a>
					</div>
				</div>
				<div class="col-lg-3 col-md-4 col-sm-6 animate__animated animate__fadeInUp" style="animation-delay: 0.3s;">
					<div class="department-card h-100">
						<div class="department-icon"><i class="fas fa-brain"></i></div>
						<h4>{ phrases["departments"]["director_title"] }</h4>
						<a href={ templ.SafeURL("mailto:" + phrases["departments"]["direc tor_phone"]) } class="department-link">{ phrases["departments"]["director_phone"] }</a>
					</div>
				</div>
				// <div class="col-lg-3 col-md-4 col-sm-6 animate__animated animate__fadeInUp" style="animation-delay: 0.4s;">
